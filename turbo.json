{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"globalEnv": [
		"APP_NAME",
		"APP_SECRET",
		"VERCEL_URL",
		"PORT",
		"DATABASE_URL",
		"UPLOADTHING_SECRET",
		"UPLOADTHING_APP_ID",
		"NODE_ENV",
		"SKIP_ENV_VALIDATION",
		"NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
		"CLERK_SECRET_KEY"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**"
			]
		},
		"lint": {},
		"type-check": {},
		"db:migrate:deploy": {},
		"db:push": {},
		"db:seed": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}